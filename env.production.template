# Production Environment Variables Template
# This template is optimized for production deployments.
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
VITE_APP_URL=https://dashboard.example.com
VITE_APP_NAME="Train Station Dashboard"
VITE_APP_VERSION=1.0.0

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Integration - OpenAI (2025 Latest Models)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_AI_PROVIDER=openai

# OpenAI Model Configuration (Current 2025 Models)
VITE_OPENAI_TEXT_MODEL=gpt-4.1-mini
VITE_OPENAI_REASONING_MODEL=o4-mini
VITE_OPENAI_IMAGE_MODEL=gpt-4o
VITE_OPENAI_MULTIMODAL_MODEL=gpt-4o

# OpenAI API Settings
VITE_OPENAI_API_BASE_URL=https://api.openai.com/v1
VITE_OPENAI_ORG_ID=your_openai_org_id_here

# Social Media API Keys
VITE_INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
VITE_INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here
VITE_FACEBOOK_APP_SECRET=your_facebook_app_secret_here
VITE_TWITTER_API_KEY=your_twitter_api_key_here
VITE_TWITTER_API_SECRET=your_twitter_api_secret_here

# Music Platform APIs
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Payment Processing
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
VITE_STRIPE_SECRET_KEY=your_stripe_secret_key_here

# File Storage
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
VITE_CLOUDINARY_API_KEY=your_cloudinary_api_key_here
VITE_CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Feature Flags
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_SOCIAL_MEDIA_SCHEDULING=true
VITE_ENABLE_AI_CONTENT_GENERATION=true
VITE_ENABLE_VENUE_BOOKING=true
VITE_ENABLE_FAN_ENGAGEMENT=true
